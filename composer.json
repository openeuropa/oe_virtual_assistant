{
    "name": "openeuropa/oe_virtual_assistant",
    "description": "Virtual assistant integration for OpenEuropa components.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "cweagans/composer-patches": "~1.4 || ^2.0",
        "drupal/core": "^10",
        "drupal/jwt": "^2.1"
    },
    "require-dev": {
        "composer/installers": "^1.5",
        "drupal/config_devel": "^1.9",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-dev": "^10",
        "drush/drush": "^11.1",
        "openeuropa/code-review": "^2.0",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0.0-beta6",
        "phpspec/prophecy-phpunit": "^2",
        "openeuropa/virtual-assistant-chat": "*",
        "npm/react": "*",
        "npm/react-dom": "*"
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_virtual_assistant\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_virtual_assistant\\": "./tests/src/"
        }
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "virtual-assistant-chat": {
            "type": "package",
            "package": {
                "name": "openeuropa/virtual-assistant-chat",
                "version": "0.0.1",
                "type": "drupal-library",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/openeuropa/virtual-assistant-chat/releases/download/0.0.1/virtual-assistant-chat-0.0.1.zip"
                }
            }
        },
        "react": {
            "type": "package",
            "package": {
                "name": "npm/react",
                "version": "18.3.1",
                "type": "drupal-library",
                "dist": {
                    "type": "tar",
                    "url": "https://registry.npmjs.org/react/-/react-18.3.1.tgz"
                }
            }
        },
        "react-dom": {
            "type": "package",
            "package": {
                "name": "npm/react-dom",
                "version": "18.3.1",
                "type": "drupal-library",
                "dist": {
                    "type": "tar",
                    "url": "https://registry.npmjs.org/react-dom/-/react-dom-18.3.1.tgz"
                }
            }
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "dist/{$name}": ["type:drupal-library"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "enable-patching": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    }
}
